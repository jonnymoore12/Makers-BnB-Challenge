<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Makers BnB</title>
  </head>
  <body>
    <% if current_user %>
      Welcome back <%= current_user.email %>!
    <% end %>

    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:error] %>
      <% flash[:error].each do |error| %>
        <div class="error"><%= error %></div>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>

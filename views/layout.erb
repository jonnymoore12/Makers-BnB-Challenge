<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Makers BnB</title>
  </head>
  <body>
    <% if current_user %>
      <p>You're logged in as <%= current_user.email %>!</p>

      <form action='/sessions' method='post'>
        <input type="hidden" name="_method" value="delete" />
        <button type="submit" value="Log Out"> Log Out </button>
      </form>

    <% end %>

    <% if flash[:logout] %>
      <div id="logout"><%= flash[:logout] %> </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:error] %>
      <% flash[:error].each do |error| %>
        <div class="error"><%= error %></div>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>

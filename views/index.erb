<div class="jumbotron text-center">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form action="/users" method="post" class="form-group form-horizontal text-center">

        <input name="email" type="email" required="true" class="form-control" size="50" placeholder="Email Address" value="<%= @user.email %>" />

        <input name="password" type="password" required="true" class="form-control" size="50" placeholder="Password" />

        <input name="password_confirmation" type="password" required="true" class="form-control" size="50" placeholder="Confirm Password"  />

        <button value="Sign Up" type="submit" class="btn btn-danger">Sign Up <i class=" fa fa-sign-in"></i></button>
      </form>
    </div>
  </div>

</div>

<div class="container-fluid" id="wrap">
  <div class="container clear-top" id="main">
    <div class="row">
      <br>
    </div>
    <h1 class="classy-font"><%=@individual_request.space.name %></h1>

    <ul id="space_details">
      <li>Status: <%= @individual_request.status %></li>
      <li>Price: <%= @individual_request.space.price %></li>
      <li>Date: <%= @individual_request.date %></li>
    </ul>

    <% if current_user.id == @individual_request.host_id %>
      <div class="btn-group classy-font">
        <form action="/requests/approve/<%=@individual_request.id%>" method="post" class="btn btn-lg btn-success">
          <button type="submit" value="Approve Request" class="btn">Approve Request</button>
        </form>
        <form action="/requests/deny/<%=@individual_request.id%>" method="post" class="btn btn-lg btn-danger">
          <button type="submit" value="Deny Request" class="btn">Deny Request</button>
        </form>
      </div>


    <% end %>

  </div>

</div>
